<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_notification"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:theme="@android:style/Theme.Holo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/background_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_notification_activate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:theme="@android:style/Theme.Holo" />

            <CheckBox
                android:id="@+id/settings_notification_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:theme="@android:style/Theme.Holo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_vibrate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settings_vibrate_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_notification_vibrate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:theme="@android:style/Theme.Holo" />

            <CheckBox
                android:id="@+id/settings_vibrate_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:theme="@android:style/Theme.Holo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="@string/button_show_notification"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/background_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="@string/button_change_nick"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/background_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_light" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/background_light" />

        <TextView
            android:id="@+id/nav_sign_out_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/nav_sign_out"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:theme="@android:style/Theme.Holo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>